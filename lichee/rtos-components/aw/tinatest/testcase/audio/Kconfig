
menu "Audio Testcase"
	depends on COMPONENTS_AW_ALSA_LIB || COMPONENTS_AW_AUDIO_SYSTEM
	depends on COMPONENTS_AW_ALSA_UTILS || COMPONENTS_AW_AUDIO_SYSTEM_UTILS

config TESTCASE_AUDIO_MIC_CAPTURE
	bool "Audio MIC capture testcase."
	default n

config TESTCASE_AUDIO_SPEAKER_PLAYBACK
	bool "Audio speaker playback testcase."
	default n

config TESTCASE_AUDIO_PLAYBACK_AND_CAPTURE
	bool "Audio playback and then capture testcase."
	default n

config TESTCASE_AUDIO_PLAYBACK_OPEN_CLOSE
	bool "Audio open close playback soundcard testcase."
	default n

config TESTCASE_AUDIO_PLAYBACK_LOOP
	bool "Audio playback loop testcase."
	default n

if TESTCASE_AUDIO_PLAYBACK_LOOP
config PLAYBACK_LOOP_COUNTS
	default 10
	string "playback loop test times"
	help
		This means how many times to test playback loop
endif

config TESTCASE_AUDIO_CAPTURE_LOOP
	bool "Audio capture loop testcase."
	default n

if TESTCASE_AUDIO_CAPTURE_LOOP
config CAPTURE_LOOP_COUNTS
	default 10
	string "capture loop test times"
	help
		This means how many times to test capture loop

config CAPTURE_LOOP_SAVE_PATH
	default "/data/capture_loop.wav"
	string "capture loop test path"
	help
		This mean which directory to save capture loop test.

endif

endmenu
